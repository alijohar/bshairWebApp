<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.papyrus.fanoos.bshairwebapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.papyrus.fanoos.bshairwebapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.papyrus.fanoos.bshairwebapp.NewsDetail" />
        <activity android:name="com.papyrus.fanoos.bshairwebapp.CommentDetail" />
        <activity android:name="com.papyrus.fanoos.bshairwebapp.CatActivity" />
        <activity android:name="com.papyrus.fanoos.bshairwebapp.SearchActivity" />
        <activity
            android:name="com.papyrus.fanoos.bshairwebapp.AboutUS"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_about_us"
            android:theme="@style/FullscreenTheme" />
    </application>

</manifest>