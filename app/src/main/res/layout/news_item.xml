<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainCardView"
    android:layout_width="match_parent"
    android:layout_height="@dimen/standard_news_image_size"
    app:cardElevation="@dimen/cardview_default_radius"
    app:cardCornerRadius="@dimen/miniMargin"
    android:layout_marginTop="@dimen/miniMargin"
    android:layout_marginBottom="@dimen/miniMargin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"

    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_news"
                android:layout_width="@dimen/standard_news_image_size"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">


            <TextView
                android:id="@+id/title_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:padding="@dimen/half_standard_margin"
                android:textSize="@dimen/caption_text_size"
                android:text="@string/test_title"
                 />

            <TextView
                android:id="@+id/cat_news"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.FontPath"
                android:padding="@dimen/half_standard_margin"
                android:textSize="@dimen/appbar_text_size"
                android:alpha="0.7"
                />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
