<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.papyrus.fanoos.bshairwebapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Ui.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Ui.NewsDetail"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Ui.CommentDetail"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Ui.CatActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name=".Ui.SearchActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name=".Ui.AboutUS"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_about_us"
            android:theme="@style/FullscreenTheme"></activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4a453df463908b2235acc05282cdace47c9e4501" />
    </application>

</manifest>